<?xml version="1.0" encoding="utf-8"?>
<!-- This file has been changed from the original. -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Dark theme variants for night mode -->
    <!-- Base themes use DayNight parent so they switch automatically -->

    <style name="OpenTasksAppTheme"
            parent="OpenTasksAppBaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/material_deep_orange_500</item>
        <item name="android:windowTitleStyle">@style/window_title_style</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme"
            parent="AppBaseTheme">
        <item name="android:textColor">#FFE0E0E0</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowTitleStyle">@style/window_title_style</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
    </style>

    <style name="DetailsTheme"
            parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/DetailsActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppThemeDialog"
            parent="@style/Theme.AppCompat.Dialog">
        <item name="android:textColor">#FFE0E0E0</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowBackground">#FF121212</item>
        <item name="android:colorBackground">#FF121212</item>
    </style>

    <style name="dark_text">
        <item name="android:textColor">#FFE0E0E0</item>
    </style>

    <style name="detail_label_text">
        <item name="android:textColor">#FFB0B0B0</item>
    </style>

    <style name="editor_label_text">
        <item name="android:textColor">#FFB0B0B0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dialog_text_title"
            parent="android:Widget.Holo.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">#FFE0E0E0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_button_secondary"
            parent="dialog_button_primary">
        <item name="android:textColor">#90FFFFFF</item>
    </style>

    <style name="ActivityDefault">
        <item name="android:background">#FF121212</item>
        <item name="android:textColor">#FFB0B0B0</item>
    </style>

    <style name="window_dialog_title_style">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:background">#FF1E1E1E</item>
    </style>

    <!-- Dark mode spinner styles -->
    <style name="TextAppearance.EditTask_Spinner"
            parent="android:style/Widget.Holo.Spinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFE0E0E0</item>
    </style>

    <!-- Popup and dropdown styles for dark mode -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">#FF2a2a2a</item>
    </style>

    <style name="DropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">#FF2a2a2a</item>
    </style>

</resources>
